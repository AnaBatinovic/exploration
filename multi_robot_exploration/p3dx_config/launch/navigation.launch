<launch>

<arg name="map_file" default="$(find p3dx_config)/maps/b-zgrada.yaml"/>
<arg name="robot_name" default="robot_0"/>
<param name="tf_prefix" value="robot_0" />


    <!-- Launch navigation -->
    <node pkg="move_base" type="move_base" respawn="false" name="move_base" ns="robot_0">
        <rosparam file="$(find p3dx_config)/config/p3dx_costmap_common_params.yaml" command="load" ns="global_costmap"/>
        <rosparam file="$(find p3dx_config)/config/p3dx_costmap_common_params.yaml" command="load" ns="local_costmap"/>
        <rosparam file="$(find p3dx_config)/config/p3dx_local_costmap_params.yaml" command="load"/>
        <rosparam file="$(find p3dx_config)/config/p3dx_global_costmap_params.yaml" command="load"/>
        <rosparam file="$(find p3dx_config)/config/p3dx_base_local_planner_params.yaml" command="load"/>

        <param name="local_costmap/scan/topic" value="/$(arg robot_name)/base_scan"/>
        <param name="local_costmap/global_frame" value="/$(arg robot_name)/odom"/>
        <param name="local_costmap/robot_base_frame" value="/$(arg robot_name)/base_link"/>
        <param name="local_costmap/map_topic" value="/map"/>
        <param name="global_costmap/scan/topic" value="/$(arg robot_name)/base_scan"/>
        <param name="global_costmap/map_topic" value="/map"/>
        <param name="global_costmap/global_frame" value="/map"/>
        <param name="global_costmap/robot_base_frame" value="/$(arg robot_name)/base_link"/>

    </node>

    <arg name="robot_name1" default="robot_1"/>
    <param name="tf_prefix1" value="robot_1" />


        <!-- Launch navigation -->
        <node pkg="move_base" type="move_base" respawn="false" name="move_base" ns="robot_1">
            <rosparam file="$(find p3dx_config)/config/p3dx_costmap_common_params.yaml" command="load" ns="global_costmap"/>
            <rosparam file="$(find p3dx_config)/config/p3dx_costmap_common_params.yaml" command="load" ns="local_costmap"/>
            <rosparam file="$(find p3dx_config)/config/p3dx_local_costmap_params.yaml" command="load"/>
            <rosparam file="$(find p3dx_config)/config/p3dx_global_costmap_params.yaml" command="load"/>
            <rosparam file="$(find p3dx_config)/config/p3dx_base_local_planner_params.yaml" command="load"/>

            <param name="local_costmap/scan/topic" value="/$(arg robot_name1)/base_scan"/>
            <param name="local_costmap/global_frame" value="/$(arg robot_name1)/odom"/>
            <param name="local_costmap/robot_base_frame" value="/$(arg robot_name1)/base_link"/>
            <param name="local_costmap/map_topic" value="/map"/>
            <param name="global_costmap/scan/topic" value="/$(arg robot_name1)/base_scan"/>
            <param name="global_costmap/map_topic" value="/map"/>
            <param name="global_costmap/global_frame" value="/map"/>
            <param name="global_costmap/robot_base_frame" value="/$(arg robot_name1)/base_link"/>

        </node>
</launch>
